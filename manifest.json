{
  "manifest_version": 3,
  "name": "PolicyPeek",
  "version": "1.0.0",
  "description": "Automatically detect and analyze privacy policies, terms of service, and legal documents using Chrome's Built-in AI",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "PolicyPeek"
  },
  "background": {
    "service_worker": "background/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"],
      "css": ["content/content.css"],
      "run_at": "document_idle"
    }
  ],
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "notifications",
    "aiLanguageModelOriginTrial"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "analysis/analysis.html",
        "icons/*"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "chrome_url_overrides": {},
  "options_page": "options/options.html"
}
